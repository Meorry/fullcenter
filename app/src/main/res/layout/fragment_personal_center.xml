<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/personal_center_top_bg">
        <RelativeLayout
            android:id="@+id/rl_user_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/bt_user_msg"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/tb_icon_more_msg_56"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/bt_user_setting"
                android:layout_toLeftOf="@id/bt_user_msg"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="设置"
                android:textSize="18sp"
                android:gravity="center"
                android:background="@null"
                android:layout_marginRight="10dp"
               />

        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/rl_user_title"
            android:id="@+id/rl_user_personal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <ImageView
                android:id="@+id/iv_user_avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/contactlogo"
                />
            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:layout_toRightOf="@id/iv_user_avatar"
                android:text="恋尚贸易街"/>
            <ImageView
                android:id="@+id/iv_user_second_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/tv_user_name"
                android:src="@drawable/tb_icon_home_qrcode_normal"
                />
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#f10606"
        android:orientation="horizontal"
      >
        <LinearLayout
            android:id="@+id/line_collect_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/tv_collect_goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏的宝贝"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/line_collect_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/tv_collect_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏的店铺"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/line_my_footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/tv_my_footer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的足迹"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_order_iterm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的订单"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/iv_order_right_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/right_arrow_icon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/tv_buy_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看全部已购宝贝"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_toLeftOf="@id/iv_order_right_arrow"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white">
            <ImageView
                android:id="@+id/iv_pay_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/order_list1"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"/>
            <ImageView
                android:id="@+id/iv_wait_send_goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/order_list2"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"/>
            <ImageView
                android:id="@+id/iv_wait_receive_goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/order_list3"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"/>
            <ImageView
                android:id="@+id/iv_wait_evaluate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/order_list4"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"/>
            <ImageView
                android:id="@+id/iv_pay_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/order_list5"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/tv_my_card_roll"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的卡卷包"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/iv_card_right_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/right_arrow_icon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        android:layout_marginTop="5dp">
        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/iv_life_iamge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/center_card_coupon1"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_my_life_roll"
            android:layout_toRightOf="@id/iv_life_iamge"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生活卷"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
        />
        <ImageView
            android:id="@+id/iv_life_right_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/right_arrow_icon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        android:layout_marginTop="5dp">
        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/iv_shop_iamge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/center_card_coupon2"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_my_shop_roll"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_shop_iamge"
            android:text="网店卷"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/iv_shop_right_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/right_arrow_icon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_toLeftOf="@id/iv_shop_right_arrow"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无可用卷"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        android:layout_marginTop="5dp">
        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/iv_vip_iamge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/center_card_coupon3"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_my_vip_card"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_vip_iamge"
            android:text="会员卡"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/iv_vip_right_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/right_arrow_icon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_toLeftOf="@id/iv_vip_right_arrow"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无可用卷"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    </LinearLayout>
</LinearLayout>
